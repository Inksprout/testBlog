<%= form_for([post, post.comments.build]) do |form| %>


<!DOCTYPE html>

  <%=if user_signed_in? do %>
   
  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :comment %><br>
    <%= form.text_area :comment %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
