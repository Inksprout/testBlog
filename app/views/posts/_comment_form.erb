<%= form_for([post, post.comments.build]) do |form| %>



  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>
